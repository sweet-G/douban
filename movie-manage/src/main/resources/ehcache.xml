<?xml version="1.0" encoding="UTF-8" ?>
<ehcache>
	<!--tmpdir： 当前登录用户的临时文件夹  -->
	<diskStore path="java.io.tempdir"/>
	
	<!-- timeToIdleSeconds:闲置时间 
		 timeToLiveSeconds:存活时间 -->
	<cache name="user"
		maxElementsInMemory="100"
		eternal="false"
		timeToIdleSeconds="10" 
		timeToLiveSeconds="10" 
		overflowToDisk="true"
	/>
	
	<cache name="movie"
		maxElementsInMemory="100"
		eternal="false"
		timeToIdleSeconds="10" 
		timeToLiveSeconds="10" 
		overflowToDisk="true"
	/>
	
	<cache name="type"
		maxElementsInMemory="100"
		eternal="false"
		timeToIdleSeconds="10" 
		timeToLiveSeconds="10" 
		overflowToDisk="true"
	/>
	
</ehcache>